@{
    ViewBag.Title = "ViewSkills";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3>View Skills</h3>
            </div>
            <div class="panel-body">
                <table class="table table-striped table-bordered table-hover" id="dataTables">
                    <thead>
                        <tr>
                            <th style="width:10%">Sl NO.</th>
                            <th>Name</th>
                            <th>Date Of Join</th>
                            <th>Primary Skills</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ int x = 0;
                            if (ViewBag.SkillList != null)
                            {
                                foreach (var a in ViewBag.SkillList)
                                {
                                    x += 1;
                                    <tr>
                                        <td>@x</td>
                                        <td>@a.Name</td>
                                        <td>@a.DOJ</td>
                                        <td>@a.PrimarySkill</td>
                                    </tr>
                                }
                            }
                        }
                    </tbody>
                </table>
            </div></div></div></div>