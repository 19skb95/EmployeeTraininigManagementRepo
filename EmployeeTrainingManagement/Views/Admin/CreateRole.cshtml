@model EmployeeTrainingManagement.Model.TMS_RoleMaster
@{
    ViewBag.Title = "CreateRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-lg-12">
    <h1 class="page-header">Role</h1>
</div>
<!-- /.col-lg-12 -->
<br />
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading"></div>
            <div class="panel-body">
                @using (Html.BeginForm())
                {  @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        <h4></h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <br />
                        <div class="form-group">
                            @Html.LabelFor(model => model.RoleName, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                <input type="text" id="RoleName" onchange="CheckRoleName()" class="form-control" required />
                                @Html.ValidationMessageFor(model => model.RoleName, "", new { @class = "text-danger" })
                            </div>
                            <label style="color:red" id="rolenamelabel"></label>
                        </div>
                        @if (ViewBag.id != null)
                        {
                            <input type="hidden" name="RoleId" value=@ViewBag.id />
                        }
                        else
                        {
                            <input type="hidden" name="RoleId" value="" />
                        }
                        <div class="col-md-7">
                            <div class="pull-right">
                                <input type="submit" value="Submit" class="btn btn-success" />
                            </div></div></div>
                }
            </div></div></div></div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                View Role Details
            </div>
            <div class="panel-body">
                <table class="table table-striped table-bordered table-hover" id="dataTables">
                    <thead>
                        <tr>
                            <th style="width:20%">Sl NO.</th>
                            <th>Name</th>
                            <th style="width:10%"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ int x = 0;
                            if (ViewBag.List != null)
                            {
                                foreach (var a in ViewBag.List)
                                {
                                    x += 1;
                                    <tr>
                                        <td>@x</td>
                                        <td>@a.RoleName</td>
                                        <td>
                                            <a href="~/Admin/CreateRole/@a.RoleId">
                                                <span class="btn btn-sm btn-info"><i class="fa fa-edit"></i></span>
                                            </a>
                                            <a href="~/Admin/DeleteRole/@a.RoleId">
                                                <span class="btn btn-sm btn-danger"><i class="fa fa-trash"></i></span>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                        }
                    </tbody>
                </table>
            </div></div></div></div>
<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
@section scripts{
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script>       
    </script>
}
<script>
       function CheckRoleName()
        {
        debugger;
        var regx = /^[a-zA-Z ]+$/g;
        var stringtotest = document.getElementById("RoleName").value;
        if (regx.test(stringtotest)) { $("#rolenamelabel").text(''); }
        else {  $("#rolenamelabel").text('Enter Valid Role Name');  }
        }
</script>

