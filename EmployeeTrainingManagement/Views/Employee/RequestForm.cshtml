@{
    ViewBag.Title = "RequestForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>RequestForm</h2>
<br />
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
            </div>
            <form action="~/Employee/RequestForm/@ViewBag.bobj.BatchId" method="post">
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-hover" id="dataTables">
                        @if (ViewBag.bobj != null)
                        {
                            <tbody>
                                <tr>
                                    <th>Batch Name:</th>
                                    <td><span>@ViewBag.bobj.BatchName</span></td>
                                    <th>Batch Course:</th>
                                    <td><span>@ViewBag.bobj.CourseName</span></td>
                                </tr>
                                <tr>
                                    <th>Course Duration:</th>
                                    <td><span>@ViewBag.bobj.CourseDuration</span></td>
                                    <th>Batch Strength:</th>
                                    <td><span>@ViewBag.bobj.BatchCount</span></td>
                                </tr>
                                <tr>
                                    <th>Start Date:</th>
                                    <td><span>@ViewBag.bobj.StartDate.ToString("dd-MMM-yyyy")</span></td>
                                    <th>End Date:</th>
                                    <td><span>@ViewBag.bobj.EndDate.ToString("dd-MMM-yyyy")</span></td>
                                </tr>
                            </tbody>
                        }
                    </table>
                    <br />
                    <input type="hidden" name="bid" value="@ViewBag.bobj.BatchId" />
                    <div class="row">                       
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-12">
                            <div class="pull-right">
                                <button type="submit" class="btn btn-default"  style="background-color:darkcyan;font-weight:bold;color:white">Click here to generate request <span><i class="fa fa-envelope"></i></span></button> 
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div></div></div>