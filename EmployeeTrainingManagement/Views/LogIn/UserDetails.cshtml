@{
    ViewBag.Title = "UserDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>UserDetails</h2>
<br /><br /><br />
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <asp:Label ID="nameLBL" Text=""></asp:Label>
            </div>
            <div class="panel-body">
                <br />
                <div class="row">
                    <div class="col-md-3">                        
                        <img src="~/images/userimag.png" class="rounded-circle" width="100" height="100">
                    </div>
                    <div class="col-md-9">
                        <h4>
                            <label>@ViewBag.SingleUserDetails.Name.ToUpper()</label>
                            </br>
                            <label>@ViewBag.SingleUserDetails.RegisteredEmail</label>
                        </h4>
                        <h4><label>domain</label></h4>
                        <h4>RPA</h4>
                        <p id="grading">
                        </p>
                    </div>
                </div>
                <div class="tab-content" style="overflow: auto">
                    <div id="home" class="tab-pane active">
                        <table class="table table-bordered">
                            <tr>
                                <td><b>Current Assignment</b></td>
                                <td><asp:Label ID="crntAssign" Text=""></asp:Label>
                                <td>
                                    <strong>Release Date: </strong>
                                    <asp:Label ID="endDate" Text=""></asp:Label>
                                </td>
                            </tr>                         
                        </table>
                    </div>
                </div>
                @if(ViewBag.SingleUserDetails!=null)
                {                
                <div class="panel-body">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-5">
                                <label>Reporting Manager</label>
                                <input type="text" value="@ViewBag.SingleUserDetails.ManagerName" readonly="readonly" class="form-control" />
                            </div>
                            <div class="col-lg-5">
                                <label>Base Location</label>
                                <input type="text" value="Base Location" readonly="readonly" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-5">
                                <label>Designation</label>
                                <input type="text" value="@ViewBag.SingleUserDetails.Designation" readonly="readonly" class="form-control" />
                            </div>
                            <div class="col-lg-5">
                                <label>Mobile No.</label>
                                <input type="text" value="@ViewBag.SingleUserDetails.MobileNo" readonly="readonly" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-5">
                                <label>Role</label>
                                <input type="text" value="@ViewBag.SingleUserDetails.Role" readonly="readonly" class="form-control" />
                            </div>
                            <div class="col-lg-5">
                                <label>Date of Joining</label>
                                <input type="text" value="@ViewBag.SingleUserDetails.DOB" readonly="readonly" class="form-control" />
                            </div></div></div>                    
                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-5">
                                <label>Skill</label>
                                <input type="text" value="@ViewBag.SingleUserDetails.PrimarySkill" readonly="readonly" class="form-control" />
                            </div>
                            <div class="col-lg-5">
                                <label>PAN</label>
                                <input type="text" value="@ViewBag.SingleUserDetails.PAN" readonly="readonly" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-5">
                                <label>Address</label>
                                <input type="text" value="@ViewBag.SingleUserDetails.Address" readonly="readonly" class="form-control" />
                            </div></div></div>
                    <div class="row">
                        <div class="col-sm-5">
                            <h5><b>Passport and visa details:</b></h5>
                        </div></div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-5">
                                <label>Passport No.</label>
                                <input type="text" value="@ViewBag.SingleUserDetails.PassportNumber" readonly="readonly" class="form-control" />
                            </div></div></div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-5">
                                <label>Passport Expiry Date</label>
                                <input type="text" value="@ViewBag.SingleUserDetails.PassportExpiryDate" readonly="readonly" class="form-control" />
                    </div></div></div>
                    <div class="row">
                        <div class="col-sm-5">
                            <h5><b>Experience details:</b></h5>
                        </div></div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-5">
                                <label>Prior Experience</label>
                                <input type="text" value="@ViewBag.SingleUserDetails.Experience" readonly="readonly" class="form-control" />
                            </div></div></div></div>
                }
                <div class="pull-right">
                    @*<asp:Button ID="btnUpdate" Text="Update" OnClick="btnUpdate_Click" />*@
                </div></div></div></div></div>