@{
    ViewBag.Title = "ApproveRequest";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br /><br />
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3>Approve Request</h3>
            </div>
            <div class="panel-body">
                <form action="~/Manager/ApproveRequest" method="post">
                    <table class="table table-striped table-bordered table-hover" id="dataTables">
                        @if (ViewBag.rqObj != null)
                        {
                            <tbody>
                                <tr>
                                    <th>Batch Name:</th>
                                    <td><span>@ViewBag.rqObj.Batchname</span></td>
                                    <th>Batch Course:</th>
                                    <td><span>@ViewBag.rqObj.CourseName</span></td>
                                </tr>
                                <tr>
                                    <th>Course Duration:</th>
                                    <td><span>@ViewBag.rqObj.CourseDuration</span></td>
                                    <th>Batch Strength:</th>
                                    <td><span>@ViewBag.rqObj.BatchCount</span></td>
                                </tr>
                                <tr>
                                    <th>Start Date:</th>
                                    <td><span>@ViewBag.rqObj.StartDate.ToString("dd-MMM-yyyy")</span></td>
                                    <th>End Date:</th>
                                    <td><span>@ViewBag.rqObj.EndDate.ToString("dd-MMM-yyyy")</span></td>
                                </tr>
                                <tr>
                                    <th>Requested By:</th>
                                    <td><span>@ViewBag.rqObj.RequetsedBy</span></td>
                                    <th>Requested To:</th>
                                    <td><span>@ViewBag.rqObj.RequetsedTo</span></td>
                                </tr>
                            </tbody>
                        }
                    </table>
                    <br />
                    <input type="hidden" name="rid" value="@ViewBag.rqObj.RequestId" />
                    <div class="row">
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-10">
                            <div class="pull-right">
                                <button class="btn btn-danger" onclick="getID(@ViewBag.rqObj.RequestId)" style="color:white;font-weight:bold" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                                    Reject
                                </button>
                            </div>
                        </div>
                        <div class="col-md-1">
                            <div class="pull-left">
                                <button type="submit" class="btn btn-default" style="background-color:darkturquoise;font-weight:bold;color:white">Click here To Approve</button>
                            </div>
                        </div>
                    </div>
                </form>
                <br />
                <div class="row">
                    <div class="collapse" id="collapseExample">                       
                        <form action="~/Manager/RejectId" method="post">
                            <input type="hidden" id="hid1" name="reqId" />
                            <div class="col-md-7">
                                <label>Add Comment:</label>
                                <textarea class="form-control" style="width:500px" name="comment"></textarea>
                            </div>
                            <div class="col-md-7"></div>
                            <div class="col-sm-6">
                                <div class="pull-right">
                                    <input type="submit" class="btn btn-default" style="background-color:deepskyblue;color:white;font-weight:bold" />
                                </div></div>
                        </form>
                    </div></div></div></div></div></div>
<script>
    function getID(id)
    {
        debugger
        $("#hid1").val(id);
    }
</script>